rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is the document owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Tenants collection
    match /tenants/{tenantId} {
      // Any authenticated user can create a tenant (during registration)
      allow create: if isAuthenticated();
      
      // Authenticated users can read tenants
      allow read: if isAuthenticated();
      
      // Only authenticated users can update their tenant
      allow update: if isAuthenticated();
      
      // No deletions
      allow delete: if false;
    }
    
    // Users collection
    match /users/{userId} {
      // Users can create their own profile (during registration)
      allow create: if isAuthenticated() && request.auth.uid == userId;
      
      // Users can read any user profile (for now, will tighten later)
      allow read: if isAuthenticated();
      
      // Users can update their own profile
      allow update: if isOwner(userId);
      
      // No deletions
      allow delete: if false;
    }
    
    // Tickets collection
    match /tickets/{ticketId} {
      // Authenticated users can read/write tickets
      allow read, write: if isAuthenticated();
      
      // Ticket comments subcollection
      match /comments/{commentId} {
        allow read, write: if isAuthenticated();
      }
    }
    
    // SLAs collection
    match /slas/{slaId} {
      allow read, write: if isAuthenticated();
    }
    
    // Knowledge base collection
    match /knowledge_base/{articleId} {
      allow read, write: if isAuthenticated();
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
